<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/requests_outgoing_template"
    android:layout_width="match_parent"
    android:layout_marginVertical="8dp"
    android:layout_height="wrap_content">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/requests_user_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#181A20"
        app:layout_constraintDimensionRatio="6:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.9"
        app:cornerRadius="16dp"
        android:translationZ="0dp"
        android:stateListAnimator="@null"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/requests_user_image"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.ShitChat.Button.Circle"
        android:src="@drawable/default_user_icon"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintBottom_toBottomOf="@id/requests_user_bg"
        app:layout_constraintTop_toTopOf="@id/requests_user_bg"
        app:layout_constraintStart_toStartOf="@id/requests_user_bg"
        app:layout_constraintEnd_toEndOf="@id/requests_user_bg"
        android:translationZ="2dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"/>

    <TextView
        android:id="@+id/requests_user_username"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizePresetSizes="@array/max17"
        android:autoSizeTextType="uniform"
        android:translationZ="2dp"
        android:ellipsize="end"
        android:fontFamily="@font/dm_sans_medium"
        android:gravity="center"
        android:letterSpacing="0.015"
        android:maxLines="1"
        android:text="@string/username"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/requests_user_bg"
        app:layout_constraintDimensionRatio="7:1"
        app:layout_constraintEnd_toEndOf="@+id/requests_user_bg"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/requests_user_image"
        app:layout_constraintTop_toTopOf="@+id/requests_user_bg"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintWidth_percent="0.7" />

</androidx.constraintlayout.widget.ConstraintLayout>