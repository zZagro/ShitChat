<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.password.ChangePasswordFragment"
    android:background="@color/background_color">

    <ImageButton
        android:id="@+id/password_back_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        android:scaleType="fitStart"
        android:src="@drawable/arrow_left"
        app:layout_constraintBottom_toTopOf="@id/line"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintWidth_percent="0.06"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.ShitChat.Button.Circle" />

    <TextView
        android:id="@+id/edit_password_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizePresetSizes="@array/max16"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/dm_sans"
        android:gravity="center_vertical"
        android:letterSpacing="0.04"
        android:text="Change Password"
        android:textColor="@color/neutrals_8"
        android:textStyle="bold"
        android:padding="0dp"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="@+id/password_back_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/password_back_button"
        app:layout_constraintTop_toTopOf="@+id/password_back_button"
        app:layout_constraintWidth_percent="0.6" />

    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#232323"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.003"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintVertical_bias="0.08"/>

    <TextView
        android:id="@+id/password_current_label"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:text="CURRENT PASSWORD"
        android:textColor="#B4B4B4"
        android:textStyle="bold"
        android:fontFamily="@font/dm_sans"
        android:letterSpacing="0.02"
        app:layout_constraintBottom_toTopOf="@+id/password_current_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="@+id/password_current_text"
        app:layout_constraintTop_toBottomOf="@+id/line"
        android:autoSizeTextType="uniform"
        android:autoSizePresetSizes="@array/max14"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintWidth_percent="0.6" />

    <com.google.android.material.textfield.TextInputEditText
        android:inputType="textPassword"
        android:id="@+id/password_current_text"
        android:tag="password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#262A34"
        android:paddingBottom="20dp"
        android:autoSizeTextType="uniform"
        android:autoSizePresetSizes="@array/max16"
        android:textColor="@color/white"
        android:fontFamily="@font/dm_sans_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintVertical_bias="0.27" />

    <ImageView
        android:id="@+id/password_current_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_eye_24"
        app:layout_constraintBottom_toBottomOf="@+id/password_current_text"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/password_current_text"
        app:layout_constraintWidth_percent="0.05"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="@id/password_current_text"
        app:layout_constraintStart_toStartOf="@id/password_current_text"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintVertical_bias="0.355"/>


    <TextView
        android:id="@+id/password_new_label"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:text="NEW PASSWORD"
        android:textColor="#B4B4B4"
        android:textStyle="bold"
        android:fontFamily="@font/dm_sans"
        android:letterSpacing="0.02"
        app:layout_constraintBottom_toTopOf="@+id/password_new_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="@+id/password_new_text"
        app:layout_constraintTop_toBottomOf="@+id/line"
        android:autoSizeTextType="uniform"
        android:autoSizePresetSizes="@array/max14"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintWidth_percent="0.6" />

    <com.google.android.material.textfield.TextInputEditText
        android:inputType="textPassword"
        android:id="@+id/password_new_text"
        android:tag="password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#262A34"
        android:paddingBottom="20dp"
        android:autoSizeTextType="uniform"
        android:autoSizePresetSizes="@array/max16"
        android:textColor="@color/white"
        android:fontFamily="@font/dm_sans_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintVertical_bias="0.42" />

    <ImageView
        android:id="@+id/password_new_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_eye_24"
        app:layout_constraintBottom_toBottomOf="@+id/password_new_text"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/password_new_text"
        app:layout_constraintWidth_percent="0.05"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="@id/password_new_text"
        app:layout_constraintStart_toStartOf="@id/password_new_text"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintVertical_bias="0.355"/>


    <TextView
        android:id="@+id/password_confirm_label"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:text="CONFIRM PASSWORD"
        android:textColor="#B4B4B4"
        android:textStyle="bold"
        android:fontFamily="@font/dm_sans"
        android:letterSpacing="0.02"
        app:layout_constraintBottom_toTopOf="@+id/password_confirm_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="@+id/password_confirm_text"
        app:layout_constraintTop_toBottomOf="@+id/line"
        android:autoSizeTextType="uniform"
        android:autoSizePresetSizes="@array/max14"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintWidth_percent="0.6" />

    <com.google.android.material.textfield.TextInputEditText
        android:inputType="textPassword"
        android:id="@+id/password_confirm_text"
        android:tag="password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#262A34"
        android:paddingBottom="20dp"
        android:autoSizeTextType="uniform"
        android:autoSizePresetSizes="@array/max16"
        android:textColor="@color/white"
        android:fontFamily="@font/dm_sans_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintVertical_bias="0.57" />

    <ImageView
        android:id="@+id/password_confirm_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_eye_24"
        app:layout_constraintBottom_toBottomOf="@+id/password_confirm_text"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/password_confirm_text"
        app:layout_constraintWidth_percent="0.05"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="@id/password_confirm_text"
        app:layout_constraintStart_toStartOf="@id/password_confirm_text"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintVertical_bias="0.355"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/password_btn_confirm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizePresetSizes="@array/max16"
        android:autoSizeTextType="uniform"
        android:backgroundTint="@color/primary_indigo"
        android:text="Confirm"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:fontFamily="@font/dm_sans"
        android:textColor="@color/white"
        android:letterSpacing="0.04"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintVertical_bias="0.73"
        app:layout_constraintWidth_percent="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>