<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">

    <View
        android:id="@+id/requests_search_popup_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/request_popup_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.9" />

    <ImageView
        android:id="@+id/requests_search_popup_cross"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/ic_cross_white"
        app:layout_constraintTop_toTopOf="@id/requests_search_popup_bg"
        app:layout_constraintBottom_toBottomOf="@id/requests_search_popup_bg"
        app:layout_constraintStart_toStartOf="@id/requests_search_popup_bg"
        app:layout_constraintEnd_toEndOf="@id/requests_search_popup_bg"
        app:layout_constraintWidth_percent="0.05"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0.95"
        app:tint="#939393" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/requests_search_popup_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="2dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        android:src="@drawable/default_user_icon"
        app:layout_constraintBottom_toBottomOf="@id/requests_search_popup_bg"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/requests_search_popup_bg"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/requests_search_popup_bg"
        app:layout_constraintTop_toTopOf="@id/requests_search_popup_bg"
        app:layout_constraintVertical_bias="0.075"
        app:layout_constraintWidth_percent="0.2"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.ShitChat.Button.Circle" />

    <TextView
        android:id="@+id/requests_search_popup_username"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizePresetSizes="@array/max22"
        android:autoSizeTextType="uniform"
        android:elevation="2dp"
        android:fontFamily="@font/dm_sans_medium"
        android:gravity="center"
        android:letterSpacing="0.015"
        android:maxLines="1"
        android:text="@string/username"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="7:1"
        app:layout_constraintEnd_toEndOf="@+id/requests_search_popup_bg"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/requests_search_popup_bg"
        app:layout_constraintTop_toBottomOf="@+id/requests_search_popup_image"
        app:layout_constraintVertical_bias="0.01"
        app:layout_constraintWidth_percent="0.7" />

    <TextView
        android:id="@+id/requests_search_popup_date"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizePresetSizes="@array/max12"
        android:autoSizeTextType="uniform"
        android:elevation="2dp"
        android:fontFamily="@font/inter_medium"
        android:gravity="center"
        android:letterSpacing="0.015"
        android:maxLines="1"
        android:text="Account created: 08.07.2023"
        android:textColor="#939393"
        app:layout_constraintDimensionRatio="9:1"
        app:layout_constraintEnd_toEndOf="@+id/requests_search_popup_bg"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/requests_search_popup_bg"
        app:layout_constraintTop_toBottomOf="@+id/requests_search_popup_username"
        app:layout_constraintWidth_percent="0.7" />

    <TextView
        android:id="@+id/requests_search_popup_friend_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizePresetSizes="@array/max13"
        android:autoSizeTextType="uniform"
        android:elevation="2dp"
        android:fontFamily="@font/dm_sans_medium"
        android:gravity="left|bottom"
        android:letterSpacing="0.015"
        android:maxLines="1"
        android:text="Friend Request"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/requests_search_popup_friend_button"
        app:layout_constraintDimensionRatio="5:1"
        app:layout_constraintStart_toStartOf="@+id/requests_search_popup_friend_button"
        app:layout_constraintWidth_percent="0.45" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/requests_search_popup_friend_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizePresetSizes="@array/max14"
        android:autoSizeTextType="uniform"
        android:backgroundTint="@color/primary_indigo"
        android:text="Send Friend Request"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:fontFamily="@font/dm_sans"
        android:textColor="@color/white"
        android:letterSpacing="0.04"
        app:layout_constraintTop_toBottomOf="@id/requests_search_popup_date"
        app:layout_constraintBottom_toBottomOf="@id/requests_search_popup_bg"
        app:layout_constraintEnd_toEndOf="@id/requests_search_popup_bg"
        app:layout_constraintStart_toStartOf="@id/requests_search_popup_bg"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintDimensionRatio="6:1"
        app:layout_constraintVertical_bias="0.25"/>

    <TextView
        android:id="@+id/requests_search_popup_message_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizePresetSizes="@array/max13"
        android:autoSizeTextType="uniform"
        android:elevation="2dp"
        android:fontFamily="@font/dm_sans_medium"
        android:gravity="left|bottom"
        android:maxLines="1"
        android:text="Message Request"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/requests_search_popup_message_button"
        app:layout_constraintDimensionRatio="5:1"
        app:layout_constraintStart_toStartOf="@+id/requests_search_popup_message_button"
        app:layout_constraintWidth_percent="0.45" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/requests_search_popup_message_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizePresetSizes="@array/max14"
        android:autoSizeTextType="uniform"
        android:backgroundTint="@color/primary_indigo"
        android:text="Send Message Request"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:fontFamily="@font/dm_sans"
        android:textColor="@color/white"
        android:letterSpacing="0.04"
        app:layout_constraintTop_toBottomOf="@id/requests_search_popup_friend_button"
        app:layout_constraintBottom_toBottomOf="@id/requests_search_popup_bg"
        app:layout_constraintEnd_toEndOf="@id/requests_search_popup_bg"
        app:layout_constraintStart_toStartOf="@id/requests_search_popup_bg"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintDimensionRatio="6:1"
        app:layout_constraintVertical_bias="0.6"/>

