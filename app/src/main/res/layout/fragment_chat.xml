<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_chat"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color">

    <ImageButton
        android:id="@+id/chat_back_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        android:scaleType="fitStart"
        android:src="@drawable/arrow_left"
        app:layout_constraintBottom_toTopOf="@id/line_chat_top"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.07"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.ShitChat.Button.Circle" />

    <TextView
        android:id="@+id/chat_username"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizePresetSizes="@array/max20"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/dm_sans"
        android:gravity="center"
        android:letterSpacing="0.04"
        android:text="Username"
        android:textColor="@color/neutrals_8"
        android:textStyle="bold"
        android:padding="0dp"
        android:includeFontPadding="false"
        app:layout_constraintDimensionRatio="6.5:1"
        app:layout_constraintBottom_toTopOf="@id/line_chat_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.7" />

    <View
        android:id="@+id/line_chat_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#232323"
        app:layout_constraintBottom_toBottomOf="@+id/view_chat_top"
        app:layout_constraintEnd_toEndOf="@+id/view_chat_top"
        app:layout_constraintHeight_percent="0.003"
        app:layout_constraintStart_toStartOf="@+id/view_chat_top"
        app:layout_constraintTop_toTopOf="@+id/view_chat_top"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintWidth_percent="1" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/chat_circle_outline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.ShitChat.Button.Circle"
        android:src="@drawable/circle_green"
        android:tint="#232323"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.14"
        app:layout_constraintEnd_toEndOf="@+id/line_chat_top"
        app:layout_constraintStart_toStartOf="@+id/line_chat_top"
        app:layout_constraintTop_toTopOf="@id/line_chat_top"
        app:layout_constraintBottom_toBottomOf="@id/line_chat_top"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/chat_image_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.ShitChat.Button.Circle"
        android:src="@drawable/default_user_icon"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.125"
        app:layout_constraintEnd_toEndOf="@+id/chat_circle_outline"
        app:layout_constraintStart_toStartOf="@+id/chat_circle_outline"
        app:layout_constraintTop_toTopOf="@id/chat_circle_outline"
        app:layout_constraintBottom_toBottomOf="@id/chat_circle_outline"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/chat_status_circle_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.ShitChat.Button.Circle"
        android:src="@drawable/circle_green"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintWidth_percent="0.03"
        app:layout_constraintEnd_toEndOf="@+id/chat_image_top"
        app:layout_constraintStart_toStartOf="@+id/chat_image_top"
        app:layout_constraintTop_toTopOf="@id/chat_image_top"
        app:layout_constraintBottom_toBottomOf="@id/chat_image_top"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"/>

    <View
        android:id="@+id/view_chat_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintDimensionRatio="5:1"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/bar_chat_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chat_circle_outline" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bar_chat_bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#181A20"
        app:layout_constraintTop_toBottomOf="@id/line_chat_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="5.5:1"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintVertical_bias="0.98"
        app:cardCornerRadius="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/send_bottom_chat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:icon="@drawable/ic_paper_airplane"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="22dp"
        app:iconTint="@color/white"
        android:gravity="center"
        android:backgroundTint="@color/primary_indigo"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        app:layout_constraintStart_toStartOf="@id/bar_chat_bottom"
        app:layout_constraintEnd_toEndOf="@id/bar_chat_bottom"
        app:layout_constraintTop_toTopOf="@id/bar_chat_bottom"
        app:layout_constraintBottom_toBottomOf="@id/bar_chat_bottom"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.115"
        app:layout_constraintHorizontal_bias="0.97"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.ShitChat.Button.Circle"/>

    <ImageView
        android:id="@+id/folder_bottom_chat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_folder"
        android:gravity="center"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        android:translationZ="1dp"
        app:layout_constraintStart_toStartOf="@id/bar_chat_bottom"
        app:layout_constraintEnd_toEndOf="@id/bar_chat_bottom"
        app:layout_constraintTop_toTopOf="@id/bar_chat_bottom"
        app:layout_constraintBottom_toBottomOf="@id/bar_chat_bottom"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.08"
        app:layout_constraintHorizontal_bias="0.03"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.ShitChat.Button.Circle"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"/>

    <EditText
        android:id="@+id/input_bottom_chat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="16sp"
        android:background="@drawable/send_msg_field"
        android:fontFamily="@font/dm_sans"
        android:inputType="text"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:translationZ="1dp"
        app:layout_constraintBottom_toBottomOf="@id/bar_chat_bottom"
        app:layout_constraintDimensionRatio="6:1"
        app:layout_constraintEnd_toStartOf="@+id/send_bottom_chat"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/folder_bottom_chat"
        app:layout_constraintTop_toTopOf="@id/bar_chat_bottom"
        app:layout_constraintWidth_percent="0.65" />

</androidx.constraintlayout.widget.ConstraintLayout>