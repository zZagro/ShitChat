<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginVertical="8dp"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/requests_incoming_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="6:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.9"
        android:background="@drawable/message_bg_default"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/requests_incoming_image"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.ShitChat.Button.Circle"
        android:src="@drawable/default_user_icon"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintBottom_toBottomOf="@id/requests_incoming_bg"
        app:layout_constraintTop_toTopOf="@id/requests_incoming_bg"
        app:layout_constraintStart_toStartOf="@id/requests_incoming_bg"
        app:layout_constraintEnd_toEndOf="@id/requests_incoming_bg"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"/>

    <TextView
        android:id="@+id/requests_incoming_username"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizePresetSizes="@array/max17"
        android:autoSizeTextType="uniform"
        android:ellipsize="end"
        android:fontFamily="@font/dm_sans_medium"
        android:gravity="center"
        android:maxLines="1"
        android:letterSpacing="0.015"
        android:text="@string/username"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/requests_incoming_bg"
        app:layout_constraintDimensionRatio="5.5:1"
        app:layout_constraintEnd_toStartOf="@+id/requests_incoming_accept"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/requests_incoming_image"
        app:layout_constraintTop_toTopOf="@+id/requests_incoming_bg"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintWidth_percent="0.5" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/requests_incoming_accept"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/primary_indigo"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        app:icon="@drawable/ic_tick_white"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="18dp"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/requests_incoming_bg"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/requests_incoming_decline"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="@+id/requests_incoming_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.09"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.ShitChat.Button.Circle" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/requests_incoming_decline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/primary_indigo"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        app:icon="@drawable/ic_cross_white"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="12dp"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/requests_incoming_bg"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/requests_incoming_bg"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="@+id/requests_incoming_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.09"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.ShitChat.Button.Circle" />

</androidx.constraintlayout.widget.ConstraintLayout>