<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/registration_fragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/registration_credentials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#cccccc"/>

            <EditText
                android:id="@+id/registration_email"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:background="@drawable/layout_recent_message_bg"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:ems="10"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:maxLines="1"
                android:inputType="text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#cccccc"/>

            <EditText
                android:id="@+id/registration_username"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:background="@drawable/layout_recent_message_bg"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:ems="10"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:maxLines="1"
                android:inputType="text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#cccccc"/>

            <EditText
                android:id="@+id/registration_password"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:background="@drawable/layout_recent_message_bg"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:ems="10"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:maxLines="1"
                android:inputType="textPassword"/>
        </LinearLayout>

        <Button
            android:id="@+id/register_button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/indigo_400"
            app:layout_constraintTop_toBottomOf="@id/registration_credentials"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:letterSpacing="0.01"
            android:text="REGISTER"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>