<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.login.LoginFragment"
    android:background="@color/background_color">

    <ImageView
        android:id="@+id/splash_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_app_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintVertical_bias="0.1"/>

    <TextView
        android:id="@+id/splash_title"
        android:fontFamily="@font/dm_sans"
        android:letterSpacing="0.02"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/app_title"
        android:gravity="center"
        android:textColor="@color/neutrals_8"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splash_logo"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintVertical_bias="0"
        android:autoSizeTextType="uniform"
        android:autoSizePresetSizes="@array/max32"/>

    <TextView
        app:layout_constraintHorizontal_bias="0.03"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:text="EMAIL"
        android:textColor="#B4B4B4"
        android:textStyle="bold"
        android:fontFamily="@font/dm_sans"
        app:layout_constraintBottom_toTopOf="@+id/login_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintStart_toStartOf="@+id/login_email"
        app:layout_constraintTop_toBottomOf="@+id/splash_title"
        android:autoSizeTextType="uniform"
        android:autoSizePresetSizes="@array/max14"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintWidth_percent="0.6" />

    <com.google.android.material.textfield.TextInputEditText
        android:inputType="textWebEmailAddress"
        android:id="@+id/login_email"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#262A34"
        android:paddingBottom="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/dm_sans_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splash_title"
        android:autoSizeTextType="uniform"
        android:autoSizePresetSizes="@array/max16"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintVertical_bias="0.15" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:text="PASSWORD"
        android:textColor="#B4B4B4"
        android:textStyle="bold"
        android:fontFamily="@font/dm_sans"
        app:layout_constraintBottom_toTopOf="@+id/login_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="@+id/login_password"
        app:layout_constraintTop_toBottomOf="@+id/login_email"
        android:autoSizeTextType="uniform"
        android:autoSizePresetSizes="@array/max14"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintWidth_percent="0.6" />

    <com.google.android.material.textfield.TextInputEditText
        android:inputType="textPassword"
        android:id="@+id/login_password"
        android:tag="password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#262A34"
        android:paddingBottom="20dp"
        android:autoSizeTextType="uniform"
        android:autoSizePresetSizes="@array/max16"
        android:textColor="@color/white"
        android:fontFamily="@font/dm_sans_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_email"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintVertical_bias="0.15" />

    <ImageView
        android:id="@+id/view_password_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_eye_24"
        app:layout_constraintBottom_toBottomOf="@+id/login_password"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/login_password"
        app:layout_constraintWidth_percent="0.05"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="@id/login_password"
        app:layout_constraintStart_toStartOf="@id/login_password"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintVertical_bias="0.355"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizePresetSizes="@array/max16"
        android:autoSizeTextType="uniform"
        android:backgroundTint="@color/primary_indigo"
        android:text="Log In"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:fontFamily="@font/dm_sans"
        android:textColor="@color/white"
        android:letterSpacing="0.04"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_password"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/go_to_register_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="6:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_button"
        app:layout_constraintWidth_percent="0.8"
        android:text="@string/don_t_have_an_account_yet_sign_up"
        android:textColor="#D3D3D3"
        android:gravity="center"
        android:autoSizeTextType="uniform"
        android:autoSizePresetSizes="@array/max16"
        app:layout_constraintVertical_bias="0.1"/>

</androidx.constraintlayout.widget.ConstraintLayout>